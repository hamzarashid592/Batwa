<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.batwa.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_recordsFragment"
            app:destination="@id/recordsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_accountsSettingsFragment"
            app:destination="@id/accountsSettingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_recordsEntryFragment"
            app:destination="@id/recordsEntryFragment" />
    </fragment>
    <fragment
        android:id="@+id/recordsFragment"
        android:name="com.example.batwa.RecordsFragment"
        android:label="Records"
        tools:layout="@layout/fragment_records" />
    <fragment
        android:id="@+id/accountsSettingsFragment"
        android:name="com.example.batwa.AccountsSettingsFragment"
        android:label="Accounts Settings" />
    <fragment
        android:id="@+id/recordsEntryFragment"
        android:name="com.example.batwa.RecordsEntryFragment"
        android:label="Enter Transaction Amount" >
        <action
            android:id="@+id/action_recordsEntryFragment_to_accountsListFragment"
            app:destination="@id/accountsListFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountsListFragment"
        android:name="com.example.batwa.AccountsListFragment"
        android:label="fragment_accounts_list"
        tools:layout="@layout/fragment_accounts_list" />
</navigation>