<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.batwa.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_accountAddEditFragment"
            app:destination="@id/accountAddEditFragment"
            app:enterAnim="@anim/bottom_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/bottom_down"
            />
        <action
            android:id="@+id/action_homeFragment_to_recordsEntryFragmentExpense"
            app:destination="@id/recordsEntryFragmentExpense"
            app:enterAnim="@anim/bottom_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/bottom_down"></action>
        <action
            android:id="@+id/action_homeFragment_to_recordsEntryFragmentIncome"
            app:destination="@id/recordsEntryFragmentIncome"
            app:enterAnim="@anim/bottom_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/bottom_down"
            ></action>
        <action
            android:id="@+id/action_homeFragment_to_transactionsFragment"
            app:destination="@id/transactionsFragment"
            app:enterAnim="@anim/to_left"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/to_right"
            />
        <action
            android:id="@+id/action_homeFragment_to_transactionAddEditFragment"
            app:destination="@id/transactionAddEditFragment"
            app:enterAnim="@anim/bottom_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/bottom_down"/>
        <action
            android:id="@+id/action_homeFragment_to_accountsSettingsFragment"
            app:destination="@id/accountsSettingsFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"/>

    </fragment>
    <fragment
        android:id="@+id/accountAddEditFragment"
        android:name="com.example.batwa.ui.forms.AccountAddFragment"
        android:label="Add an Account"
        tools:layout="@layout/fragment_account_add" />
    <fragment
        android:id="@+id/recordsEntryFragmentExpense"
        android:name="com.example.batwa.ui.forms.RecordsEntryFragmentExpense"
        android:label="Enter your Expense" >
        <action
            android:id="@+id/action_recordsEntryFragmentExpense_to_accountsListFragment"
            app:destination="@id/accountsListFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"/>
        <action
            android:id="@+id/action_recordsEntryFragmentExpense_to_transactionCommentsFragment"
            app:destination="@id/transactionCommentsFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"/>

    </fragment>
    <fragment
        android:id="@+id/accountsListFragment"
        android:name="com.example.batwa.ui.AccountsListFragment"
        android:label="Select an Account" >

    </fragment>
    <fragment
        android:id="@+id/transactionCommentsFragment"
        android:name="com.example.batwa.ui.forms.TransactionCommentsFragment"
        android:label="Add your Comments"
        tools:layout="@layout/fragment_transaction_comments" />
    <fragment
        android:id="@+id/transactionsFragment"
        android:name="com.example.batwa.ui.TransactionsFragment"
        android:label="All Transactions" >
        <action
            android:id="@+id/action_transactionsFragment_to_transactionAddEditFragment"
            app:destination="@id/transactionAddEditFragment"
            app:enterAnim="@anim/bottom_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/bottom_down"/>
    </fragment>
    <fragment
        android:id="@+id/recordsEntryFragmentIncome"
        android:name="com.example.batwa.ui.forms.RecordsEntryFragmentIncome"
        android:label="Enter your Income" >
        <action
            android:id="@+id/action_recordsEntryFragmentIncome_to_accountsListFragment"
            app:destination="@id/accountsListFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"/>
        <action
            android:id="@+id/action_recordsEntryFragmentIncome_to_transactionCommentsFragment"
            app:destination="@id/transactionCommentsFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"/>
    </fragment>
    <fragment
        android:id="@+id/transactionAddEditFragment"
        android:name="com.example.batwa.ui.forms.TransactionAddEditFragment"
        android:label="Edit A Record" >
        <argument
            android:name="accountTranViewArg"
            app:argType="com.example.batwa.database.AccountTransactionView" />
    </fragment>
    <fragment
        android:id="@+id/accountsSettingsFragment"
        android:name="com.example.batwa.ui.AccountsSettingsFragment"
        android:label="Account Settings" >

        <action
            android:id="@+id/action_accountsSettingsFragment_to_accountEditFragment"
            app:destination="@id/accountEditFragment"
            app:enterAnim="@anim/bottom_up"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/bottom_down"/>
    </fragment>
    <fragment
        android:id="@+id/accountEditFragment"
        android:name="com.example.batwa.ui.forms.AccountEditFragment"
        android:label="Edit an Account">

        <argument
            android:name="selectedAccount"
            app:argType="com.example.batwa.database.Account" />

    </fragment>
</navigation>
